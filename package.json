{
  "private": true,
  "name": "ezra",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss app/styles/index.css -o app/index.css --env production",
    "dev": "concurrently \"npm run dev:css\" \"cross-env NODE_ENV=development netlify dev\"",
    "dev:css": "postcss app/styles/index.css -o app/index.css --w",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx ./app",
    "lint:ci": "eslint --ext .ts,.tsx,.js,.jsx ./app --max-warnings 0",
    "format": "prettier --write \"./app/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "postinstall": "remix setup node"
  },
  "dependencies": {
    "@netlify/functions": "^0.10.0",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "cross-env": "^7.0.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.14",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.11"
  },
  "engines": {
    "node": "=16"
  },
  "sideEffects": false
}
