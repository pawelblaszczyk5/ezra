{
  "private": true,
  "name": "ezra",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "postcss app/styles/index.css -o app/index.css --env production",
    "build:worker": "esbuild --define:process.env.NODE_ENV='\"production\"' --minify --bundle --sourcemap --outdir=dist ./worker",
    "dev": "concurrently \"npm run dev:css\" \"remix watch\" \"npm run dev:miniflare\"",
    "dev:css": "postcss app/styles/index.css -o app/index.css --w",
    "dev:worker": "esbuild --define:process.env.NODE_ENV='\"development\"' --bundle --sourcemap --outdir=dist ./worker",
    "dev:miniflare": "miniflare --kv-persist --build-command \"npm run dev:worker\" --watch",
    "lint": "eslint --fix --ext .ts,.tsx,.js,.jsx ./app",
    "lint:ci": "eslint --ext .ts,.tsx,.js,.jsx ./app --max-warnings 0",
    "format": "prettier --write \"./app/**/*.{js,jsx,ts,tsx,html,css,json}\"",
    "postinstall": "remix setup cloudflare-workers",
    "test": "jest --passWithNoTests",
    "deploy": "npm run build && wrangler publish",
    "storybook": "concurrently \"npm run dev:css\" \"start-storybook -p 6006\"",
    "build-storybook": "npm run build:css && build-storybook"
  },
  "dependencies": {
    "@fontsource/manrope": "^4.5.1",
    "@netlify/functions": "^0.10.0",
    "@remix-run/cloudflare-workers": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "@supabase/supabase-js": "^1.29.3",
    "@tailwindcss/forms": "^0.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "storybook-addon-themes": "^6.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@cloudflare/workers-types": "^3.3.1",
    "@remix-run/dev": "^1.1.3",
    "@storybook/addon-actions": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.0.15",
    "esbuild": "0.14.12",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.7.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-testing-library": "^5.0.3",
    "jest": "^27.4.7",
    "jest-transform-stub": "^2.0.0",
    "miniflare": "2.2.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.15",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": "=16"
  },
  "main": "dist/worker.js",
  "sideEffects": false
}
